<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No.</th>
      <th>Avatar</th>
      <th>Nama</th>
      <th>Email</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < player.length; i++){ %>
    <tr>
      <td><%= i + 1 %></td>
      <td>
        <img
          alt="test"
          src="http://localhost:3000/uploads/<%= player[i].avatar %>"
          width="48px" />
      </td>
      <td><%= player[i].name %></td>
      <td><%= player[i].email %></td>

      <td>
        <a href="/player/edit/<%= player[i]._id %>" class="btn btn-info btn-sm">
          <i class="fas fa-pencil-alt"></i>
          Ubah
        </a>
        <form
          style="display: inline-block"
          action="/player/delete/<%= player[i]._id %>?_method=DELETE"
          method="POST">
          <button class="btn btn-danger btn-sm">
            <i class="fas fa-trash"></i>
            Hapus
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
